<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/singleitem"
    android:layout_margin="30dp"
    android:paddingTop="50dp"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/dataprofile"
        android:src="@drawable/kindpng_211191"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Header"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:id="@+id/dataheader"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/dataprice"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:id="@+id/datadesc"
        android:text="@string/desc"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Order now"
        android:id="@+id/databuttom"
        android:layout_gravity="center"
        />

</LinearLayout>